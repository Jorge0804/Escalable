<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="362dp"
    android:layout_height="347dp"
    android:layout_gravity="center|top"
    android:layout_marginTop="25dp"
    android:background="@drawable/cardview_blog_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:background="@mipmap/huawei">
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Huawei cambiará de sistema
operativo"
                android:textSize="22sp"
                android:textColor="#000"
                android:layout_marginHorizontal="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:textColor="#000"
                android:text="La relación entre los Estados Unidos y Huawei está rota,
hasta tal punto que el gigante chino ha denunciado al..."
                android:layout_marginHorizontal="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huawei Industries | 19/03/2019"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>