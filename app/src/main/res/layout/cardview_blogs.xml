<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="177dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentTop="true"
            android:background="@drawable/cardview_blog_style"
            android:id="@+id/image_course"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:src="@mipmap/image_1" />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/myprofile_cardbackground"
            android:padding="6dp">

            <TextView
                android:id="@+id/titlecardviewblog"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="What do you social Media Breaks Accomplish?"
                android:textColor="#ff000000"
                android:textSize="16dp"/>

            <TextView
                android:layout_below="@+id/titlecardviewblog"
                android:id="@+id/extractcardviewblog"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:text="It depends on who you are"
                android:textColor="#ff000000"
                android:textSize="10dp"/>

            <TextView
                android:gravity="right"
                android:id="@+id/footerblogcardview"
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:text="Angela LashBroke  22 de Febrero"
                android:textColor="#ff000000"
                android:textSize="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>